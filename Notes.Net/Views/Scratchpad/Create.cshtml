@model CreateScratchpadViewModel

<h1>Create a new Scratchpad</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Project"></label>
        <div><span asp-validation-for="Project" class="text-danger"></span></div>
        <select model-for="Project" class="form-control">
            <option disabled selected value="">Select a Project</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <div><span asp-validation-for="Title" class="text-danger"></span></div>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="text-left">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
    </div>
</form>
